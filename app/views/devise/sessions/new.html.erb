<div class="login-container">
  <div class="login-subcontainer-background">
    <h2 class='login-title'>Log In</h2>
    <hr class='login-line-title'/>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="login-container-form-email">
        <%= f.label :email, class: "login-title-email" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "login-input-email", placeholder: "Ingresa tu correo" %>
      </div>

      <div class="login-container-form-password">
        <%= f.label :password, class: "login-title-password" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "login-input-password", placeholder: "Ingresa una contraseña" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="login-container-remember-me">
          <%= f.check_box :remember_me, class: "login-checkbox" %>
          <%= f.label :recuerdame, class: "login-title-remember-me" %>
        </div>
      <% end -%>

      <div class="login-container-btn-login">
        <%= f.submit "Iniciar Sesión", class: "btn-login" %>
      </div>
    </div>
  </div>
<% end %>
</div>

<%= render "devise/shared/links" %>
